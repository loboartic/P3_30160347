<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Inicio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/css/index.css">
</head>
<body class="min-h-100 bg-gray-200">

    <div class="md:flex min-h-screen md:align-top">
        <aside class="md:w-30 lg:w-30 xl:w-30 bg-cyan-600 px-5 py-10 flex flex-col items-center justify-between shadow-lg text-white font-semibold text-md">
            <div class="flex flex-col w-full">
                <button class="p-2 hover:outiline rounded w-full hover:bg-cyan-900" id="btnSection" name="products">Productos</button>
                <button class="p-2 hover:outiline rounded w-full hover:bg-cyan-900" id="btnSection" name="categories">Categorias</button>
            </div>
            <button class="p-2 hover:outiline rounded w-full hover:bg-cyan-900">Cerrar Sessión</button>
        </aside>

        <!-- Home -->
        <main class="w-full px-5 py-10 bg-neutral-100 flex section" id="section-home" name="home">
            <h2 class="text-4xl font-bold text-center">Bienvenido</h2>
        </main>

        <!-- Productos -->
        <main class=" w-full px-5 py-10 bg-neutral-100 flex flex-col items-center section hidden" id="section-product" name="products">
            <h2 class="text-3xl font-light text-center">Productos</h2>
            <section class="mt-4 w-full ">
                <!-- Contenedor de productos -->
                <!-- <div class="border w-full border-neutral-300 rounded-md shadow bg-white flex flex-wrap flex-row justify-stretch gap-4 p-4" id="containerProducts">
                    <div class="w-full border-b mb-2 pb-4 grid grid-cols-4 grid-auto-flow-row">
                        <button id="createProduct" class="border border-gray-300 bg-gray-100 px-4 rounded shadow w-1/5">Crear Producto</button>

                        <input type="" name="" class="border rounded px-2 bg-neutral-50 w-full outline-red-200 shadow-inner" placeholder="Buscar productos">

                    </div>
                </div> -->
                <div class="border w-full border-neutral-300 rounded-lg shadow bg-white flex flex-wrap flex-col gap-4 p-4">
                    <div class="flex flex-row justify-between w-full">
                        <button id="createProduct" class="border border-gray-300 bg-gray-100 px-4 py-2 rounded shadow">Crear Producto</button>
                        <div class="flex-grow">
                          <input type="text" name="search" class="border rounded px-2 py-2 bg-neutral-50 w-full outline-red-200 shadow-inner" placeholder="Buscar productos">
                        </div>
                    </div>

                    <div class="sm:flex sm:flex-row sm:flex-wrap md:grid md:grid-cols-2 md:grid-auto-flow-row md:gap-4 md:grid-cols-4 lg:grid-cols-6" id="containerProducts">
                    </div>
                </div>
            </section>
        </main>

        <main class="w-full px-5 py-10 bg-neutral-100 flex flex-col items-centersection hidden" id="section-categories" name="categories">
            <h2 class="text-3xl font-light text-center">Categorias</h2>
            <div class="min-w-full">
                <button id="btnCreateCategory" class="border border-neutral-300 bg-neutral-100 px-4 py-2 rounded shadow ">Crear Categoria</button>
            </div>
            <div class="align-middle mt-3  inline-block min-w-full shadow overflow-hidden sm:rounded-lg border border-gray-300">
                <table class="min-w-full">
                    <thead class="bg-neutral-100 ">
                        <tr>
                            <th class="px-6 py-3 text-semibold text-center text-md leading-4 text-gray-600 uppercase tracking-wider">
                                  Nombre de categoria
                            </th>
                            <th class="px-6 py-3 text-semibold text-center text-md leading-4 text-gray-600 uppercase tracking-wider">
                                  Disponibilidad
                            </th>
                            <th class="px-6 py-3 text-semibold text-center text-md leading-4 text-gray-600 uppercase tracking-wider">
                                  Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody id="category-list" class="bg-white">

                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <!-- Modal para agregar, editar y ver productos -->

    <div id="backgroundModal" class="fixed inset-0 bg-neutral-800 bg-opacity-75 bg-backdrop backdrop-filter backdrop-blur-sm transition-opacity transition-all transition duration-300 ease-in-out hidden " data-mode="create" data-modal-origin="">

        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
            
            <div class="flex justify-center items-center">
                <div id="modalBase" class="relative transform overflow-hidden rounded bg-white text-left shadow transition-all transition duration-300 ease-in-out sm:my-4 sm:w-full sm:max-w-lg border">
                    
                    <div class="bg-white px-4 pb-4 pt-5 shadow flex flex-col transition duration-300 ease-in-out">
                        <section class="flex flex-col p-4 hidden" data-origin="product">
                          <section class="p-4 h-60 w-full mb-4 border border-2 border-gray-400 border-dashed w-full rounded-lg shadow-inner shadow flex flex-col justify-center items-center hover:bg-neutral-700 hover:border-neutral-100 text-indigo-600 hover:text-white transition-all" id="dropArea">

                              <span class="font-bold text-center pb-2">Arrastre sus archivos aquí ó</span>
                              <button id="btnFiles" class="px-4 py-2 bg-blue-500 text-white border border-blue-700 rounded shadow">Ingrese manualmente</button>

                          </section>

                          <section class="hidden" id="boxPreviewImgs">

                            <p class="border rounded bg-zinc-100 p-2 text-amber-600 font-semibold">Se usará la primera imagen adjuntada como imagen a mostrar en miniaturas</p>

                            <div class="mt-2 flex flex-row gap-4" id="imagesPreview" >
                              
                            </div>

                          </section>

                        </section>

                        <form id="formProduct" class="p-4">

                            <label class="text-left text-lg text-gray-700 mt-2 hidden" data-origin="product">Nombre del producto</label>
                            <p name="name" class="hidden" data-origin="product-edit"></p>
                            <input class="border border-gray-300 rounded shadow-inner bg-gray-100 p-2 w-full mb-4 focus:outline-none focus:ring-4 hidden" type="text" name="name" data-origin="product" placeholder="Por ejemplo: Pesa 20kg">


                            <label class="text-left text-lg text-gray-700 mt-4 hidden" data-origin="product">Precio de venta</label>
                            <p name="price" class="hidden" data-origin="product-edit"></p>
                            <input class="border border-gray-300 rounded shadow-inner bg-gray-100 p-2 w-full mb-4 focus:outline-none focus:ring-4 hidden" type="text" name="price" data-origin="product" placeholder="Ejemplo: $20">

                            <label class="text-left text-lg text-gray-700 mt-4 hidden" data-origin="product">Código Identificador</label>
                            <p name="code" class="hidden" data-origin="product-edit"></p>
                            <input class="border border-gray-300 rounded shadow-inner bg-gray-100 p-2 w-full mb-4 focus:outline-none focus:ring-4 hidden" type="text" name="code" data-origin="product" placeholder="Ingrese el código del producto">

                            <label class="text-left text-lg text-gray-700 mt-4 hidden" data-origin="product">Categoria</label>
                            <select id="selectCategories" name="categoryId" class="border border-gray-300 rounded shadow bg-gray-100 p-3 w-full mb-4 text-gray-500 hidden" data-origin="product">
                              <option value="">Selecione una categoria</option>
                            </select>

                            <label class="text-left text-lg text-gray-700 mt-4 hidden" data-origin="product">Descripción</label>
                            <textarea class="border border-gray-300 rounded shadow-inner bg-gray-100 p-2 w-full mb-4 focus:outline-none focus:ring-4 hidden" name="description" data-origin="product" placeholder="Ingrese una Descripción del producto"></textarea>

                            <input id="files" type="file" name="files" class="hidden" multiple="" data-origin="no-visible">

                            <p name="name_category" class="hidden" data-origin="category-edit"></p>
                            <label class="text-left text-lg text-gray-700 mt-4 hidden" data-origin="category">Nombre de la categoria</label>
                            <input class="border border-gray-300 rounded shadow-inner bg-gray-100 p-2 w-full mb-4 focus:outline-none focus:ring-4 hidden" type="text" name="name_category" data-origin="category" placeholder="Ingrese el nombre de la categoria">

                            <section class="flex justify-center">
                                <button id="btnCloseModal" class="btn btn-secundary">Cerrar</button>

                                <button id="btnSaveInformation" class="btn btn-save">Gurdar</button>
                            </section>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Spinner de carga -->
    <div id="spinner" class="fixed inset-0 bg-neutral-800 bg-opacity-75 bg-backdrop backdrop-filter backdrop-blur-sm transition-opacity transition-all hidden">
        <div class="flex flex-col items-center justify-center fixed inset-0 z-10 w-screen overflow-y-auto">
            <span class="text-white text-3xl">Cargando...</span>
            <img src="/img/spinner.svg">
        </div>
    </div>

    <!-- Scrips -->
    <script src="/js/sweetalert.js"></script>
    <script src="/js/popper-2.11.8.min.js"></script>
    <script src="/js/tippy-6.3.7-min.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/productsSection.js"></script>

</body>