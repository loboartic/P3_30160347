<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inicio</title>
  <script src="js/tailwind.js"></script>
</head>
<body>
  
  <header class="w-full bg-orange-600 shadow-md h-16 sm:flex-row flex justify-center items-center justify-evenly">
    
    <div>
      <button class="col-span-2 bg-gray-300 rounded-full p-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0" />
        <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
        </svg>
      </button>
    </div>

    <nav class="flex justify-evenly w-1/6 items-center justify-center ">
      <a href="#" class="text-white  font-semibold " id="categorysLink">Categorias</a>
      <a href="#" class="text-white  font-semibold " id="highlightLink">Destacados</a>


      <div class="relative m-4">
        <div class="absolute pointer-events-none pt-3">
          <svg xmlns="http://www.w3.org/2000/svg" class=" absolute icon icon-tabler icon-tabler-search" width="44" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
            <path d="M21 21l-6 -6" />
          </svg>
        </div>
        <input type="text" placeholder="Buscar producto" class="pl-10 bg-gray-200 border rounded-lg p-3 outline-none hover:ring-2">
      </div>
    </nav>

     <div>
      <button class="col-span-2 rounded-lg p-1 my-1">
        <!-- Icono de salida -->
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="30" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#fafafa" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
          <path d="M9 12h12l-3 -3" />
          <path d="M18 15l3 -3" />
        </svg>
      </button>
     </div>
  </header>

  <!-- Boton momentaneo -->
  <button id="btnCreateProduct" class="bg-neutral-100 border rounded-md p-2 m-4 hover:text-white hover:bg-neutral-500">Crear Producto</button>
   

  <section class="container h-[100vh] w-[100vw] p-3">
    <!-- Modelo Tarjeta -->  
    <div class="border rounded-md bg-blue-500 shadow-xl h-[240px] w-[200px] grid grid-rows-6 hover:-translate-y-3 transition ease-in delay-150">
      <div class="bg-gray-800 row-span-4 rounded-t-lg">
        <div id="content" class="grid grid-cols-2">
          <p>destacado</p>
          <p>Info</p>
        </div>
        <div class="grid place-items-center">
          <!-- Icono de camara -->
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-photo-off" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M15 8h.01" />
            <path d="M7 3h11a3 3 0 0 1 3 3v11m-.856 3.099a2.991 2.991 0 0 1 -2.144 .901h-12a3 3 0 0 1 -3 -3v-12c0 -.845 .349 -1.608 .91 -2.153" />
            <path d="M3 16l5 -5c.928 -.893 2.072 -.893 3 0l5 5" />
            <path d="M16.33 12.338c.574 -.054 1.155 .166 1.67 .662l3 3" />
            <path d="M3 3l18 18" />
          </svg>
        </div>
      </div>
    </div>
  </section>


  <!-- Modal para agregar productos -->
  <div id="modal" class="fixed inset-0 bg-backdrop backdrop-filter backdrop-blur-sm z-50 flex items-center justify-center px-6 bg-slate-950/50 hidden ">
    <div class="h-auto overflow-hidden rounded-md shadow-2xl w-full max-w-3xl border">
        <div class="bg-gray-100 grid grid-cols-12">
          <p class="col-span-11 font-semibold m-4"> Crear Producto </p>
          <span id="exitButton" class="justify-end">
            <svg xmlns="http://www.w3.org/2000/svg" class="pr-0 icon icon-tabler icon-tabler-xbox-x" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#597e8d" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 21a9 9 0 0 0 9 -9a9 9 0 0 0 -9 -9a9 9 0 0 0 -9 9a9 9 0 0 0 9 9z" />
            <path d="M9 8l6 8" />
            <path d="M15 8l-6 8" />
          </svg></span>
        </div>
        <div class="bg-gray-100">
          <!-- Modal Content -->
          <form class="grid grid-cols-6 gap-1">

            <div class="border-2 border-dashed rounded-md m-4 p-4 col-span-6 h-60 flex flex flex-col justify-center items-center hover:bg-gray-600 transition ease-out delay-100">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-upload" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#597e8d" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
                  <path d="M7 9l5 -5l5 5" />
                  <path d="M12 4l0 12" />
                </svg>
              </div>
              <label>Arrastrar aqu√≠ su archivos</label>
              <p>o</p>
              <label id="inputLabel" class="bg-blue-300 border rounded-md p-4 hover:bg-blue-500 transition ease-out delay-100">Seleccione sus archivos manualmente</label>
              <input id="inputFile" type="file" class="hidden">
            </div>
            
            <div class="relative m-4 col-span-3">
              <div class="absolute p-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="absolute icon icon-tabler icon-tabler-box-seam" width="32" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#597e8d" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 3l8 4.5v9l-8 4.5l-8 -4.5v-9l8 -4.5" />
                  <path d="M12 12l8 -4.5" />
                  <path d="M8.2 9.8l7.6 -4.6" />
                  <path d="M12 12v9" />
                  <path d="M12 12l-8 -4.5" />
                </svg>
              </div>
              <input type="text" name="mail" placeholder="Nombre del producto" class="appearance-none w-full bg-gray-100 pl-14 p-4 text-gray-700 rounded-md border focus:ring-2 leading-tight focus:outline-none focus:shadow-outline">
            </div>


            <div class="relative m-4 col-span-3">
              <div class="absolute p-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="absolute icon icon-tabler icon-tabler-coin" width="32" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#597e8d" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                  <path d="M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 1 0 0 4h2a2 2 0 1 1 0 4h-2a2 2 0 0 1 -1.8 -1" />
                  <path d="M12 7v10" />
                </svg>
              </div>
              <input type="text" name="mail" placeholder="Precio Unitario" class="appearance-none w-full bg-gray-100 pl-14 p-4 text-gray-700 rounded-md border focus:ring-2 leading-tight focus:outline-none focus:shadow-outline">
            </div>

              <div class="relative m-4 col-span-3">
              <div class="absolute p-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="absolute icon icon-tabler icon-tabler-coin" width="32" height="32" viewBox="0 0 24 24" stroke-width="1.5" stroke="#597e8d" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
                  <path d="M14.8 9a2 2 0 0 0 -1.8 -1h-2a2 2 0 1 0 0 4h2a2 2 0 1 1 0 4h-2a2 2 0 0 1 -1.8 -1" />
                  <path d="M12 7v10" />
                </svg>
              </div>
              <input type="text" name="mail" placeholder="Codigo" class="appearance-none w-full bg-gray-100 pl-14 p-4 text-gray-700 rounded-md border focus:ring-2 leading-tight focus:outline-none focus:shadow-outline">
            </div>

            <div class=" m-4 col-span-3">
              <select class="bg-gray-100 p-4 border w-full">
                <option value="0">Seleccione una opcion</option>
              </select>
            </div>
          </form>

        </div>
        <div>
          <!-- Modal Footer -->
        </div>

    </div>

  </div>
  <script src="js/home.js"></script>
</body>
</html>